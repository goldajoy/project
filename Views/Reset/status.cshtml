@model ClassLibrary.PostModel.Status
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Airbnclean</title>
    <link href="https://fonts.googleapis.com/css?family=Muli:400,600,700" rel="stylesheet">
    <style>
        body {
            background-color: #EFEFEF;
            margin: 0px;
            padding: 0px;
            font-size: 14px;
            font-weight: 400;
            font-family: 'Muli', sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        .container {
            padding: 0px 15px;
            width: 100%;
            display: block;
            position: relative;
        }

        .box-center {
            display: block;
            position: relative;
            margin: 5% auto;
            max-width: 500px;
            background-color: #fff;
            padding: 15px;
        }

        .logo-bn {
            display: block;
            position: relative;
            margin: 0px auto;
            margin-bottom: 10px;
            max-width: 150px;
        }

        .form-group {
            margin-bottom: 15px;
            clear: both;
            display: block;
            position: relative;
        }

        label {
            font-weight: 600;
            margin-bottom: 7px;
            display: inline-block;
        }

        .input-control {
            height: 40px;
            width: 100%;
            border: 1px solid #ccc;
            background-color: #FFF;
            color: #000;
            padding: 7px;
        }

        .btn {
            display: inline-block;
            position: relative;
            cursor: pointer;
            background-color: #E0E0E0;
            border: 1px solid transparent;
            color: #000;
            font-weight: 400;
            line-height: 1;
            padding: 10px 15px;
        }

            .btn:hover,
            .btn:focus {
                background-color: #DADADA;
                border: 1px solid transparent;
                color: #000;
            }

        .text-center {
            text-align: center;
        }

        .btn-black {
            background-color: #4E4E4E;
            border: 1px solid transparent;
            color: #fff;
        }

            .btn-black:hover,
            .btn-black:focus {
                background-color: #000;
                border: 1px solid transparent;
                color: #fff;
            }

        .anger-tag {
            color: #000;
            text-decoration: none;
        }

            .anger-tag:focus,
            .anger-tag:hover {
                color: #000;
                outline: none;
                text-decoration: underline;
            }
    </style>
</head>

<body>
    @if (@Model.status)
    {
        <div class="container">
            <div class="box-center">
                <img src="~/Content/image/logo.png" class="logo-bn" />

                <div class="form-group" style="border-top: 1px solid #ccc; border-bottom: 1px solid #ccc; padding-top: 10px; padding-bottom: 10px; text-align: center;">
                    <img src="~/Content/image/tick-icon-2.png" class="logo-bn" />
                    <h3>Sucessfully Reset Password!</h3>
                    <p>You have sucessfully reset your password</p>

                </div>
                @*<div class="form-group text-center" style="margin-bottom: 0px;">
                        <a href="#" class="anger-tag">Back to home</a>
                    </div>*@
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <div class="box-center">
                <img src="~/Content/image/logo.png" class="logo-bn" />

                <div class="form-group" style="border-top: 1px solid #ccc; border-bottom: 1px solid #ccc; padding-top: 10px; padding-bottom: 10px; text-align: center;">
                    <img src="~/Content/image/fail.png" class="logo-bn" />
                    <h3>Operation Failed!</h3>
                    @*<p>You have sucessfully reset your password</p>*@

                </div>
                @*<div class="form-group text-center" style="margin-bottom: 0px;">
                        <a href="#" class="anger-tag">Back to home</a>
                    </div>*@
            </div>
        </div>
    }
</body>
</html>
