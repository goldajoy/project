@{
    ViewBag.Title = "home";
    Layout = "~/Views/Shared/_CleanerLayout.cshtml";
    var Data = new EntitiesLibrary.Data.Registration((EntitiesLibrary.tRegistration)Session["AccountDetails"]);
}

<section class="banner-btn">
    <div class="container">
        <div class="row banner-btn-bg">
            <div class="col-md-12">
                <p class="text-center">Please Select an option</p>
            </div>


            @if (Data != null)
            {
                if (Data.IsAdmin)
                {

                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="banner-btn-single">
                            <a href="/Cleaner/viewjobs">
                                <img src="~/Content/images/icons/view-jobs.png" />
                                <h4>View Jobs</h4>
                            </a>
                        </div>
                    </div><!-- /col-md-2 -->

                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="banner-btn-single">
                            <a href="/Cleaner/myjobs">
                                <img src="~/Content/images/icons/my-jobs.png" />
                                <h4>My Jobs</h4>
                            </a>
                        </div>
                    </div><!-- /col-md-2 -->

                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="banner-btn-single">
                            <a href="/Cleaner/alljobs">
                                <img src="~/Content/images/icons/all-jobs.png" />
                                <h4>All Jobs</h4>
                            </a>
                        </div>
                    </div><!-- /col-md-2 -->

                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="banner-btn-single">
                            <a href="/Cleaner/mycalender">
                                <img src="~/Content/images/icons/my-calendar.png" />
                                <h4>My Calendar</h4>
                            </a>
                        </div>
                    </div><!-- /col-md-2 -->
                }
                else
                {

                    <div class="col-md-2 col-sm-4 col-xs-12 col-md-offset-3">
                        <div class="banner-btn-single">
                            <a href="/Cleaner/viewjobs">
                                <img src="~/Content/images/icons/view-jobs.png" />
                                <h4>View Jobs</h4>
                            </a>
                        </div>
                    </div><!-- /col-md-2 -->

                    <div class="col-md-2 col-sm-4 col-xs-12">
                        <div class="banner-btn-single">
                            <a href="/Cleaner/myjobs">
                                <img src="~/Content/images/icons/my-jobs.png" />
                                <h4>My Jobs</h4>
                            </a>
                        </div>
                    </div><!-- /col-md-2 -->



                    <div class="col-md-2 col-sm-4 col-xs-12">
                        <div class="banner-btn-single">
                            <a href="/Cleaner/mycalender">
                                <img src="~/Content/images/icons/my-calendar.png" />
                                <h4>My Calendar</h4>
                            </a>
                        </div>
                    </div><!-- /col-md-2 -->
                }
            }

        </div><!-- /row -->
    </div><!-- /container -->
</section><!-- /main-banner -->
